@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container centered">
    <main role="main" class="pb-1">

        <div class="row">
            <div class="col-md-5 centered login-border">
                <section>
                    <form id="account" method="post" novalidate="novalidate">
                        <div class="container">
                            <img class="image-centered" src="~/images/grph_2.svg" />
                        </div>
                        <hr />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="validation-message"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="validation-message"></span>
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe">
                                    <input asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block grph-primary">Sign in</button>
                        </div>
                    </form>
                </section>
            </div>

        </div>
    </main>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
