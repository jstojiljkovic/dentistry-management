@page "/settings/{Email}"

@using DentistryManagement.Client.Pages.Users.Components

@inject HttpClient Http

@attribute [Authorize]

<div class="under-top-row px-4"></div>

<div class="content px-4">
    <div class="row">
        <div class="col">
            <Profile Email="@Email" />
        </div>
        <div class="col">
            <Password Email="@Email" />
        </div>
    </div>
</div>

@code {
    [CascadingParameter]
    protected MainLayout navigationSet { get; set; }

    [Parameter]
    public string Email { get; set; }

    protected override void OnInitialized()
    {
        base.OnInitialized();
        navigationSet.resetNavigationPanelWithoutState();
        navigationSet.addNavigationItem("Settings");
    }
}